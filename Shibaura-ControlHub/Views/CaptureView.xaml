<UserControl x:Class="Shibaura_ControlHub.Views.CaptureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:conv="clr-namespace:Shibaura_ControlHub.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1280" d:DesignWidth="1920">
    <StackPanel Margin="12">
        <TextBlock Text="キャプチャ映像選択" Style="{StaticResource PageTitleStyle}"/>

        <!-- 1行×11列のマトリクス -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="設定" FontSize="14" FontWeight="Bold" Margin="0,0,0,10">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            
            <!-- 1行×11列のマトリクス -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 列ヘッダー -->
                <ItemsControl Grid.Row="0" Grid.Column="1" ItemsSource="{Binding CaptureMatrixColumnLabels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" Columns="11"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="9" FontWeight="SemiBold" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextWrapping="Wrap" TextAlignment="Center"
                                       Foreground="{StaticResource SubTextBrush}"
                                       Margin="2">
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- 行ヘッダー -->
                <ItemsControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding CaptureMatrixRowLabels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" Columns="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="10" FontWeight="SemiBold" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextWrapping="Wrap" TextAlignment="Center"
                                       Foreground="{StaticResource SubTextBrush}"
                                       Margin="2">
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- マトリクス本体 -->
                <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding CaptureMatrixButtons}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" Columns="11"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="" 
                                    Command="{Binding DataContext.SelectCaptureMatrixCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Padding="8,8" 
                                    Margin="1"
                                    IsManipulationEnabled="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
                                        <Setter Property="Stylus.IsTapFeedbackEnabled" Value="False"/>
                                        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="False"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Viewbox Stretch="Uniform" StretchDirection="Both">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="0"
                                                            Padding="{TemplateBinding Padding}"
                                                            Width="100"
                                                            Height="100">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    </Viewbox>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>

