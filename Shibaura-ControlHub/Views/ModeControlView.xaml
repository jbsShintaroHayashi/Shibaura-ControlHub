<UserControl x:Class="Shibaura_ControlHub.Views.ModeControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Shibaura_ControlHub.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="1280" d:DesignWidth="1920">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:CategoryAndModeMatchConverter x:Key="CategoryAndModeMatchConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            </Style>
        </Grid.Style>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- ヘッダー: モード表示とメニューに戻るボタン -->
        <Border Grid.Row="0" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="25,20">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock FontSize="20" FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                            </Style>
                        </TextBlock.Style>
                        <Run Text="モード："/>
                        <Run Text="{Binding CurrentModeName, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="モード選択に戻る" 
                        Command="{Binding ReturnToMenuCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Padding="20,12"
                        FontSize="14"/>
            </Grid>
        </Border>
        
        <!-- 左・中央・右の3列Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
        
        <!-- 左側: 機器カテゴリ選択 -->
        <Border Grid.Column="0" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
                </Style>
            </Border.Style>
                <ScrollViewer VerticalScrollBarVisibility="Disabled" PanningMode="None">
                <StackPanel Margin="10">
                        <!-- 音量調整 -->
                    <Button Content="音量調整"
                            Command="{Binding SelectEquipmentCategoryCommand}"
                            CommandParameter="Microphone"
                            Margin="5,5"
                            Padding="15,12"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding MicrophoneAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedEquipmentCategory}" Value="Microphone">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- カメラ -->
                    <Button Content="カメラ"
                            Command="{Binding SelectEquipmentCategoryCommand}"
                            CommandParameter="Camera"
                            Margin="5,5"
                            Padding="15,12"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding CameraAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedEquipmentCategory}" Value="Camera">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                        <!-- 映像切替 -->
                    <Button Content="映像切替"
                            Command="{Binding SelectEquipmentCategoryCommand}"
                            CommandParameter="Switcher"
                            Margin="5,5"
                            Padding="15,12"
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                            Visibility="{Binding SwitcherAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedEquipmentCategory}" Value="Switcher">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- モード2限定: キャプチャ -->
                    <Button Content="キャプチャ"
                            Command="{Binding SelectEquipmentCategoryCommand}"
                            CommandParameter="Capture"
                            Margin="5,5"
                            Padding="15,12"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding CaptureAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedEquipmentCategory}" Value="Capture">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- 映像録画（授業・遠隔・eスポーツで表示） -->
                    <Button Content="映像録画"
                            Command="{Binding SelectEquipmentCategoryCommand}"
                            CommandParameter="Recording"
                            Margin="5,5"
                            Padding="15,12"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="{Binding RecordingAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedEquipmentCategory}" Value="Recording">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- モード2限定: 照明制御 -->
                    <Button Content="照明制御"
                            Command="{Binding SelectEquipmentCategoryCommand}"
                            CommandParameter="Lighting"
                            Margin="5,5"
                            Padding="15,12"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedEquipmentCategory}" Value="Lighting">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- 中央: 操作GUI -->
        <Border Grid.Column="1" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
                </Style>
            </Border.Style>
                <ScrollViewer VerticalScrollBarVisibility="Disabled" PanningMode="None">
                <StackPanel Margin="20,20,20,0">
                    <!-- マイク用UI（モード1、2用） -->
                    <local:MicrophoneViewA>
                        <local:MicrophoneViewA.Style>
                            <Style TargetType="local:MicrophoneViewA">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding DataContext.SelectedEquipmentCategory, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Microphone"/>
                                            <Condition Binding="{Binding DataContext.CurrentMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="1"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding DataContext.SelectedEquipmentCategory, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Microphone"/>
                                            <Condition Binding="{Binding DataContext.CurrentMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="2"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </local:MicrophoneViewA.Style>
                        <local:MicrophoneViewA.DataContext>
                            <Binding Path="MicrophoneViewModel"/>
                        </local:MicrophoneViewA.DataContext>
                    </local:MicrophoneViewA>

                    <!-- マイク用UI（モード3用） -->
                    <local:MicrophoneViewB>
                        <local:MicrophoneViewB.Style>
                            <Style TargetType="local:MicrophoneViewB">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding DataContext.SelectedEquipmentCategory, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Microphone"/>
                                            <Condition Binding="{Binding DataContext.CurrentMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="3"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </local:MicrophoneViewB.Style>
                        <local:MicrophoneViewB.DataContext>
                            <Binding Path="MicrophoneViewModel"/>
                        </local:MicrophoneViewB.DataContext>
                    </local:MicrophoneViewB>
                    
                    <!-- カメラ用UI -->
                    <local:CameraView>
                        <local:CameraView.Visibility>
                            <Binding Path="DataContext.SelectedEquipmentCategory" RelativeSource="{RelativeSource AncestorType=UserControl}" Converter="{StaticResource CategoryMatchConverter}" ConverterParameter="Camera"/>
                        </local:CameraView.Visibility>
                        <local:CameraView.DataContext>
                            <Binding Path="CameraViewModel"/>
                        </local:CameraView.DataContext>
                    </local:CameraView>
                    
                        <!-- スイッチャー用UI（モード1、2用：9×11列） -->
                        <local:SwitcherViewA>
                            <local:SwitcherViewA.Style>
                                <Style TargetType="local:SwitcherViewA">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding DataContext.SelectedEquipmentCategory, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Switcher"/>
                                                <Condition Binding="{Binding DataContext.CurrentMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="1"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding DataContext.SelectedEquipmentCategory, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Switcher"/>
                                                <Condition Binding="{Binding DataContext.CurrentMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="2"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </local:SwitcherViewA.Style>
                            <local:SwitcherViewA.DataContext>
                                <Binding Path="SwitcherViewModel"/>
                            </local:SwitcherViewA.DataContext>
                        </local:SwitcherViewA>

                        <!-- スイッチャー用UI（モード3用：9×8列） -->
                        <local:SwitcherViewB>
                            <local:SwitcherViewB.Style>
                                <Style TargetType="local:SwitcherViewB">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding DataContext.SelectedEquipmentCategory, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Switcher"/>
                                                <Condition Binding="{Binding DataContext.CurrentMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="3"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </local:SwitcherViewB.Style>
                            <local:SwitcherViewB.DataContext>
                            <Binding Path="SwitcherViewModel"/>
                            </local:SwitcherViewB.DataContext>
                        </local:SwitcherViewB>

                    <!-- 映像録画 用UI -->
                    <local:RecordingView>
                        <local:RecordingView.Visibility>
                            <Binding Path="DataContext.SelectedEquipmentCategory" RelativeSource="{RelativeSource AncestorType=UserControl}" Converter="{StaticResource CategoryMatchConverter}" ConverterParameter="Recording"/>
                        </local:RecordingView.Visibility>
                        <local:RecordingView.DataContext>
                            <Binding Path="RecordingViewModel"/>
                        </local:RecordingView.DataContext>
                    </local:RecordingView>

                    <!-- 照明制御 用UI -->
                    <local:LightingView Visibility="Collapsed">
                        <local:LightingView.DataContext>
                            <Binding Path="LightingViewModel"/>
                        </local:LightingView.DataContext>
                    </local:LightingView>

                    <!-- キャプチャ 用UI（モード2限定） -->
                    <local:CaptureView>
                        <local:CaptureView.Style>
                            <Style TargetType="local:CaptureView">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding DataContext.SelectedEquipmentCategory, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Capture"/>
                                            <Condition Binding="{Binding DataContext.CurrentMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="2"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </local:CaptureView.Style>
                        <local:CaptureView.DataContext>
                            <Binding Path="CaptureViewModel"/>
                        </local:CaptureView.DataContext>
                    </local:CaptureView>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- 右側: 機器状態 -->
        <Border Grid.Column="2">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
                </Style>
            </Border.Style>
                <ScrollViewer VerticalScrollBarVisibility="Disabled" PanningMode="None">
                <StackPanel Margin="20">
                    <TextBlock Text="ステータス" 
                               FontSize="15" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,6"/>
                    
                    <!-- 機器状態カード一覧 -->
                        <ItemsControl ItemsSource="{Binding FilteredMonitoringView}"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  IsEnabled="False">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0"
                                        CornerRadius="6"
                                        Padding="4,3"
                                        Margin="0,0,0,3"
                                        Height="28">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                        </Style>
                                    </Border.Style>
                                    <Grid VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.Column="0"
                                                 Width="10" 
                                                 Height="10" 
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#EF4444"/>
                                                    <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StatusCode}" Value="1">
                                                            <Setter Property="Fill" Value="#10B981"/>
                                                        </DataTrigger>
                                                            <DataTrigger Binding="{Binding StatusCode}" Value="2">
                                                            <Setter Property="Fill" Value="#6B6B6B"/>
                                                        </DataTrigger>
                                                            <DataTrigger Binding="{Binding StatusCode}" Value="4">
                                                            <Setter Property="Fill" Value="#F59E0B"/>
                                                        </DataTrigger>
                                                            <DataTrigger Binding="{Binding StatusCode}" Value="5">
                                                            <Setter Property="Fill" Value="#EF4444"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Name}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,0,0,0"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>
        </Grid>
    </Grid>
</UserControl>