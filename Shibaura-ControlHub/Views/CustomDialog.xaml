<Window x:Class="Shibaura_ControlHub.Views.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" 
        Height="200" 
        Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Border Background="{StaticResource PanelBrush}"
            CornerRadius="12"
            BorderThickness="2"
            BorderBrush="{StaticResource PrimaryBrush}">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="10" ShadowDepth="4"/>
        </Border.Effect>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- タイトル -->
            <TextBlock Grid.Row="0"
                       Text="{Binding Title}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       Margin="0,0,0,16"
                       HorizontalAlignment="Center"/>

            <!-- メッセージ -->
            <TextBlock Grid.Row="1"
                       Text="{Binding Message}"
                       FontSize="14"
                       Foreground="{StaticResource TextBrush}"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       LineHeight="24"
                       LineStackingStrategy="BlockLineHeight"
                       Margin="0,0,0,20"/>

            <!-- ボタン -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="はい"
                        Command="{Binding YesCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Padding="40,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        MinWidth="120"
                        Margin="0,0,6,0"
                        Visibility="{Binding ShowYesNo, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Button Content="いいえ"
                        Command="{Binding NoCommand}"
                        Padding="40,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        MinWidth="120"
                        Margin="6,0,0,0"
                        Visibility="{Binding ShowYesNo, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                            <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                   <Style.Triggers>
                                   </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="OK"
                        Command="{Binding OkCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Padding="40,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        MinWidth="120"
                        Visibility="{Binding ShowOk, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

