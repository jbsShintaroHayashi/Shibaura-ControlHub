<UserControl x:Class="Shibaura_ControlHub.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1280" d:DesignWidth="1920">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- ヘッダー（タイトル + 右上メンテナンス歯車） -->
        <Grid Grid.Row="0" Margin="25,25,25,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}">
                    <Run Text="Shi"/><Run Language="ja-jp" Text="b"/><Run Text="aura Control Hub"/>
                </TextBlock>
                <Separator Margin="0,15"/>
            </StackPanel>

            <!-- 右上: メンテナンス（歯車） -->
            <Button Grid.Column="1"
                    Command="{Binding MaintenanceCommand}"
                    Width="52" Height="52"
                    Padding="0"
                    Background="{StaticResource ControlBrush}"
                    Foreground="{StaticResource TextBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                <Button.Content>
                    <TextBlock Text="⚙" 
                               FontSize="20" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                </Button.Content>
            </Button>
        </Grid>
        
        <Grid Grid.Row="1" Margin="25,0,25,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- モード選択カード -->
            <Border Grid.Column="0" 
                    Style="{StaticResource CardBorder}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="モード選択" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,30"
                               HorizontalAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button Content="{Binding Mode1Name}" 
                                Command="{Binding Mode1Command}"
                                Style="{StaticResource ModeButtonStyle}"
                                Background="{StaticResource ControlBrush}"
                                Width="200" Height="100"
                                Margin="0,0,20,0"
                                FontSize="24"/>
                        <Button Content="{Binding Mode2Name}" 
                                Command="{Binding Mode2Command}"
                                Style="{StaticResource ModeButtonStyle}"
                                Background="{StaticResource ControlBrush}"
                                Width="200" Height="100"
                                Margin="0,0,20,0"
                                FontSize="24"/>
                        <Button Content="{Binding Mode3Name}" 
                                Command="{Binding Mode3Command}"
                                Style="{StaticResource ModeButtonStyle}"
                                Background="{StaticResource ControlBrush}"
                                Width="200" Height="100"
                                Margin="0,0,20,0"
                                FontSize="24"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
            
        <!-- 隠しボタン: 左下 -->
        <Button Grid.Row="1" 
                Command="{Binding HiddenButtonCommand}"
                CommandParameter="LeftBottom"
                Width="50" Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="25,0,0,25"
                Background="Transparent"
                BorderThickness="0"
                Opacity="0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Opacity" Value="0"/>
                </Style>
            </Button.Style>
        </Button>
        
        <!-- 電源オフボタン（右下） -->
        <Button Grid.Row="1"
                Content="システム電源オフ"
                Command="{Binding PowerOffCommand}"
                Style="{StaticResource ModeButtonStyle}"
                Background="{StaticResource ControlBrush}"
                Width="180" Height="70"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,50,50"
                FontSize="20"/>
                    
        <!-- 隠しボタン: 右下 -->
        <Button Grid.Row="1"
                Command="{Binding HiddenButtonCommand}"
                CommandParameter="RightBottom"
                Width="50" Height="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,25,25"
                Background="Transparent"
                BorderThickness="0"
                Opacity="0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Opacity" Value="0"/>
                </Style>
            </Button.Style>
        </Button>

        <!-- 隠しボタン: 右上 -->
        <Button Grid.Row="1"
                Command="{Binding HiddenButtonCommand}"
                CommandParameter="RightTop"
                Width="50" Height="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,25,25,0"
                                      Background="Transparent"
                                        BorderThickness="0"
                Opacity="0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Opacity" Value="0"/>
                                                    </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
