<UserControl x:Class="Shibaura_ControlHub.Views.RecordingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="1280" d:DesignWidth="1920">
    <StackPanel Margin="12">
        <TextBlock Text="映像録画" Style="{StaticResource PageTitleStyle}"/>

        <!-- 録画マトリクス -->
        <StackPanel Margin="0,0,0,12">
            <TextBlock Text="録画選択" Style="{StaticResource SectionHeaderStyle}"/>
            <Border BorderThickness="0" BorderBrush="Transparent" 
                    CornerRadius="12" Padding="24" Background="{StaticResource PanelBrush}">
                <StackPanel>
                    <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列ヘッダー -->
                    <ItemsControl Grid.Row="0" Grid.Column="1" ItemsSource="{Binding RecordingMatrixColumnLabels}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1" Columns="11"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="10" FontWeight="SemiBold" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           TextWrapping="Wrap" TextAlignment="Center"
                                           Foreground="{StaticResource SubTextBrush}"
                                           Margin="2">
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- 行ヘッダー -->
                    <ItemsControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding RecordingMatrixRowLabels}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="2" Columns="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="10" FontWeight="SemiBold" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           TextWrapping="Wrap" TextAlignment="Center"
                                           Foreground="{StaticResource SubTextBrush}"
                                           Margin="2">
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- マトリクス本体 -->
                    <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding RecordingMatrixButtons}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="2" Columns="11"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="" 
                                        Command="{Binding DataContext.SelectRecordingMatrixCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Padding="8,8" 
                                        Margin="1"
                                        IsManipulationEnabled="False">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
                                            <Setter Property="Stylus.IsTapFeedbackEnabled" Value="False"/>
                                            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="False"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Viewbox Stretch="Uniform" StretchDirection="Both">
                                                            <Border x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="0"
                                                                    Padding="{TemplateBinding Padding}"
                                                                    Width="130"
                                                                    Height="130">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </Viewbox>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Background" Value="{StaticResource ControlBrush}"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
        <StackPanel Margin="0,0,0,12">
            <TextBlock Text="全体録画" Style="{StaticResource SectionHeaderStyle}"/>
            <Border BorderThickness="0" BorderBrush="Transparent" 
            CornerRadius="12" Padding="16" Background="{StaticResource PanelBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="待機中" FontSize="14" FontWeight="Bold" Foreground="#10B981"
                           Margin="0,0,0,4"/>
                        <TextBlock Text="00:00:00" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- 録画開始ボタン -->
                        <Button Content="スタート" 
                        Padding="20,12" FontSize="14" FontWeight="Bold"
                        Width="140">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="#10B981"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- 録画停止ボタン -->
                        <Button Content="ストップ"
                        Padding="20,12" FontSize="14" FontWeight="Bold"
                        Width="140"
                        Margin="20,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="#EF4444"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
        <StackPanel Margin="0,0,0,12">
            <TextBlock Text="録画1" Style="{StaticResource SectionHeaderStyle}"/>
            <Border BorderThickness="0" BorderBrush="Transparent" 
                    CornerRadius="12" Padding="16" Background="{StaticResource PanelBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="待機中" FontSize="14" FontWeight="Bold" Foreground="#10B981"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="00:00:00" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- 録画開始ボタン -->
                        <Button Content="スタート" 
                                Padding="20,12" FontSize="14" FontWeight="Bold"
                                Width="140">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="#10B981"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- 録画停止ボタン -->
                        <Button Content="ストップ"
                                Padding="20,12" FontSize="14" FontWeight="Bold"
                                Width="140"
                                Margin="20,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="#EF4444"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
        <StackPanel Margin="0,0,0,12">
            <TextBlock Text="録画2" FontSize="12" FontWeight="SemiBold" Foreground="#6B7280" Margin="0,0,0,6"/>
            <Border BorderThickness="0" BorderBrush="Transparent" 
            CornerRadius="12" Padding="16" Background="{StaticResource PanelBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="待機中" FontSize="14" FontWeight="Bold" Foreground="#10B981"
                           Margin="0,0,0,4"/>
                        <TextBlock Text="00:00:00" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- 録画開始ボタン -->
                        <Button Content="スタート" 
                        Padding="20,12" FontSize="14" FontWeight="Bold"
                        Width="140">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="#10B981"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- 録画停止ボタン -->
                        <Button Content="ストップ"
                        Padding="20,12" FontSize="14" FontWeight="Bold"
                        Width="140"
                        Margin="20,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="#EF4444"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>

